@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@using GrennyWebApplication.Areas.Client.ViewModels.Authentication
@model ChangePasswordViewModel

<section class="bg-img1 txt-center p-lr-15 p-tb-92" style="background-image: url();   background-position: center; background-repeat: no-repeat; background-size: cover;">
    <h2 class="ltext-105 cl0 txt-center">
        Forget Password?
    </h2>
</section>



<div class="mt-5 mb-5 login-register-area section-space-y-axis-100">
    <div class="container">
        <div class="d-flex justify-content-center align-items-center">
            <div class="col-lg-6">
                <form method="Post" asp-route="client-auth-changePassword">
                    <div class="login-form">
                        <h4 class="login-title">Change Your Password</h4>
                        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                        <div class="row">
                            <div class="col-lg-12 d-none">
                                <label>Password*</label>
                                <input asp-for="Token" readonly placeholder="Email Address" />
                                <span asp-validation-for="Token" class="text-danger"></span>
                            </div>
                            <div class="col-lg-12">
                                <label>Password</label>
                                <input asp-for="Password" placeholder="Password" />
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                            <div class="col-lg-12">
                                <label> ConfirmPassword</label>
                                <input asp-for="ConfirmPassword" placeholder="Confirm Password" />
                                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                            </div>
                            <div class="col-lg-12 pt-5">
                                <button class="btn btn-custom-size lg-size btn-pronia-primary">
                                    Change Password
                                </button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>