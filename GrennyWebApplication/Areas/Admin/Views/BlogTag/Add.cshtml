@using GrennyWebApplication.Areas.Admin.ViewModels.BlogTag

@model AddViewModel
<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-header">
                <h4 class="card-title">Tags</h4>
            </div>
            <div class="card-body">
                <div class="general-label">
                    <form method="POST" asp-route="admin-blogtag-add">

                        <div class="form-group">
                            <label asp-for="Tagname"></label>
                            <input asp-for="Tagname" class="form-control">
                            <span asp-validation-for="Tagname" class="text-danger"></span>
                        </div>
                    
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </form>
                </div>
            </div><!--end card-body-->
        </div><!--end card-->
    </div>
</div>
