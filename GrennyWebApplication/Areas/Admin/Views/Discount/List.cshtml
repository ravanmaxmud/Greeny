@using GrennyWebApplication.Areas.Admin.ViewModels.Discount
@model List<ListItemViewModel>

<div class="col-lg-12">
    <div class="row justify-content-end">
        <div class="">
            <a asp-controller="discount" asp-action="add" target="_blank" class="btn btn-secondary">Add new Discount</a>
        </div>
    </div>
</div>
<div class="col-lg-12">
    <div class="card">
        <div class="card-header">
            <h4 class="card-title">Discounts</h4>
        </div><!--end card-header-->
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped mb-0">
                    <thead>
                        <tr>
                            
                            <th>Title</th>
                            <th>Dis pers</th>
                            <th>Dis time</th>
                            <th>CreatedAt</th>
                            <th>UpdatedAt</th>
                            <th class="text-end">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var discount in Model)
                        {
                            <tr>

                                <td>@discount.Title</td>
                                <td>@discount.DiscontPers</td>
                                <td>@discount.DiscountTime</td>
                                <td>@discount.CreatedAt.ToString("dd/MM/yyyy")</td>
                                <td>@discount.UpdatedAt.ToString("dd/MM/yyyy")</td>
                                <td class="text-end">
                                    <a asp-route="admin-discount-update" asp-route-id="@discount.Id"><i class="las la-pen text-secondary font-16"></i></a>
                                    <form method="POST" asp-route="admin-discount-delete" asp-route-id="@discount.Id" id="book-form-@discount.Id"></form>
                                    <button type="submit" form="book-form-@discount.Id">
                                        <i class="las la-trash-alt text-secondary font-16"></i>
                                    </button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table><!--end /table-->
            </div><!--end /tableresponsive-->
        </div><!--end card-body-->
    </div><!--end card-->
</div>

