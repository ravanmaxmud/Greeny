@using GrennyWebApplication.Areas.Admin.ViewModels.Slider
@model AddSliderViewModel
<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-header">
                <h4 class="card-title">Books</h4>
            </div>
            <div class="card-body">
                <div class="general-label">
                    <form method="POST" asp-route="admin-slider-update" asp-route-id="@Model.Id" enctype="multipart/form-data">
                        <div class="text-danger" asp-validation-summary="ModelOnly"></div>

                        <div class="form-group">
                            <label>MainTitle</label>
                            <input asp-for="Title" class="form-control">
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label>OfferContext</label>
                            <input asp-for="OfferContext" class="form-control">
                            <span asp-validation-for="OfferContext" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label>Content</label>
                            <input asp-for="Content" class="form-control">
                            <span asp-validation-for="Content" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label>ButtonName</label>
                            <input asp-for="ButtonName" class="form-control">
                            <span asp-validation-for="ButtonName" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label>ButtonRedirectUrl</label>
                            <input asp-for="ButtonRedirectUrl" class="form-control">
                            <span asp-validation-for="ButtonRedirectUrl" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label>Order</label>
                            <input asp-for="Order" class="form-control">
                            <span asp-validation-for="Order" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label>Image</label>
                            <input asp-for="Image" class="form-control">
                            <span asp-validation-for="Image" class="text-danger"></span>
                        </div>
                        <div class="form-group mt-2">
                            <input asp-for="ImageUrl" type="hidden">
                            <img src="~/@Model.ImageUrl" width="20%" />
                        </div>
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </form>
                </div>
            </div><!--end card-body-->
        </div><!--end card-->
    </div>
</div>