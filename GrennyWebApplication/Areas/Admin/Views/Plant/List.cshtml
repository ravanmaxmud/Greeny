@using GrennyWebApplication.Areas.Admin.ViewModels.Plant

@model List<PlantListViewModel>

<div class="col-lg-12">
    <div class="row justify-content-end">
        <div class="">
            <a asp-route="admin-plant-add" class="btn btn-secondary">Add new Plant</a>
        </div>
    </div>
</div>
<div class="col-lg-12">
    <div class="card">
        <div class="card-header">
            <h4 class="card-title">Books</h4>
        </div><!--end card-header-->
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped mb-0">
                    <thead>
                        <tr>
                            <th>Title</th>
                            <th>Description</th>
                            <th>Price</th>
                            <th>Discount Price</th>
                            <th>Stock</th>
                            <th>Brands</th>
                            <th>Tags</th>
                            <th>Categories</th>
                            <th>Discount</th>
                            <th>Created</th>
                            <th>Updated</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var plant in Model)
                        {
                            <tr>
                                <td>@plant.Name</td>
                                <td>@plant.Description</td>
                                <td>@plant.Price</td>
                                <td>@plant.DiscountPrice</td>
                                <td>@plant.InStock</td>
                                <td>@string.Join( " and  ", plant.Brands.Select(c => $"{c.Title}"))</td>
                                <td>@string.Join( " and  ", plant.Categories.Select(c => $"{c.Title}"))</td>
                                <td>@string.Join( " and  ", plant.Tags.Select(c => $"{c.Title}"))</td>
                                <td>@string.Join( " and  ", plant.Discounts.Select(c => $"{c.Title}"))</td>
                                <td>@plant.CreatedAt.ToString("dd/MM/yyyy")</td>
                                <td class="text-end">

                                    <a class="btn btn-success" asp-route="admin-plant-update" asp-route-id="@plant.Id">Update Product</a>
                                    <form method="POST" asp-route="admin-plant-delete" asp-route-id="@plant.Id" id="book-form-@plant.Id"></form>
                                    <button class="btn btn-danger" type="submit" form="book-form-@plant.Id">
                                        Delete Product
                                    </button>
                                    <a class="btn btn-primary" asp-route="admin-plantimg-list" asp-route-plantId="@plant.Id">ProductImageList</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table><!--end /table-->
            </div><!--end /tableresponsive-->
        </div><!--end card-body-->
    </div><!--end card-->
</div>