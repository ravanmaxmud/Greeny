@using GrennyWebApplication.Areas.Admin.ViewModels.About


@model List<ListItemViewModel>
<div class="col-lg-12">
    <div class="card">
        <div class="card-header">
            <h4 class="card-title">Navbars</h4>
        </div><!--end card-header-->
        <div class="">

        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped mb-0">
                    <thead>
                        <tr>
                            <th>Content</th>
                            <th class="text-end">Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var about in Model)
                        {
                            <tr>
                                <td>@about.Content</td>

                                <td class="text-end">
                                    <a asp-route="admin-about-update" asp-route-id="@about.Id"><i class="las la-pen text-secondary font-16"></i></a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table><!--end /table-->
            </div><!--end /tableresponsive-->
        </div><!--end card-body-->
    </div><!--end card-->
</div>