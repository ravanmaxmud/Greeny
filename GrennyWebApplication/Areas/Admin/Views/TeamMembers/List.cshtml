@using GrennyWebApplication.Areas.Admin.ViewModels.TeamMember
@model List<ListViewModel>

<div class="col-lg-12">
    <div class="row justify-content-end">
        <div class="">
            <a asp-controller="teammember" asp-action="add" target="_blank" class="btn btn-secondary">Add new TeamMember</a>
        </div>
    </div>
</div>
<div class="col-lg-12">
    <div class="card">
        <div class="card-header">
            <h4 class="card-title">Books</h4>
        </div><!--end card-header-->
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped mb-0">
                    <thead>
                        <tr>
                            <th>Image</th>
                            <th>FullName</th>
                            <th>Position</th>
                            <th>Created</th>
                            <th>Updated</th>
                            <th class="text-end">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var teamMember in Model)
                        {
                            <tr>
                                <td><img style="width:50%;height:50%; border-radius:0" src="~/@teamMember.ImageUrl"></td>
                                <td>@teamMember.FullName</td>
                                <td>@teamMember.Position</td>
                                <td>@teamMember.CreatedAt.ToString("dd/MM/yyyy")</td>
                                <td>@teamMember.UpdatedAt.ToString("dd/MM/yyyy")</td>
                                <td class="text-end">
                                    <a asp-route="admin-teammember-update" asp-route-id="@teamMember.Id"><i class="las la-pen text-secondary font-16"></i></a>
                                    <form method="POST" asp-route="admin-teammember-delete" asp-route-id="@teamMember.Id" id="book-form-@teamMember.Id"></form>
                                    <button type="submit" form="book-form-@teamMember.Id">
                                        <i class="las la-trash-alt text-secondary font-16"></i>
                                    </button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table><!--end /table-->
            </div><!--end /tableresponsive-->
        </div><!--end card-body-->
    </div><!--end card-->
</div>

