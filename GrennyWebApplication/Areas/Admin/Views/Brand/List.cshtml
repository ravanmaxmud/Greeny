@using GrennyWebApplication.Areas.Admin.ViewModels.Brand


@model List<ListBrandViewModel>

<div class="col-lg-12">
    <div class="row justify-content-end">
        <div class="">
            <a asp-controller="brand" asp-action="add" target="_blank" class="btn btn-secondary">Add new Brand</a>
        </div>
    </div>
</div>
<div class="col-lg-12">
    <div class="card">
        <div class="card-header">
            <h4 class="card-title">Books</h4>
        </div><!--end card-header-->
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped mb-0">
                    <thead>
                        <tr>
                            <th>Image</th>
                            <th>Title</th>
                            <th>CreatedAt</th>
                            <th>UpdatedAt</th>
                            <th class="text-end">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var brand in Model)
                        {
                            <tr>
                                <td><img style="width:100%" src="~/@brand.ImageUrl"></td>
                                <td>@brand.Name</td>
                                <td>@brand.CreatedAt.ToString("dd/MM/yyyy")</td>
                                <td>@brand.UpdatedAt.ToString("dd/MM/yyyy")</td>
                                <td class="text-end">
                                    <a asp-route="admin-brand-update" asp-route-id="@brand.Id"><i class="las la-pen text-secondary font-16"></i></a>
                                    <form method="POST" asp-route="admin-brand-delete" asp-route-id="@brand.Id" id="book-form-@brand.Id"></form>
                                    <button type="submit" form="book-form-@brand.Id">
                                        <i class="las la-trash-alt text-secondary font-16"></i>
                                    </button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table><!--end /table-->
            </div><!--end /tableresponsive-->
        </div><!--end card-body-->
    </div><!--end card-->
</div>